<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JumleFragment">

    <!-- TODO: Update blank fragment layout -->
    <ToggleButton
        android:id="@+id/button_talla"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:background="@drawable/talla"
        app:backgroundTint="@color/design_default_color_primary"
        android:textOn=""
        android:textOff=""
        />
    <TextView
        android:id="@+id/text_tr"
        app:layout_constraintTop_toBottomOf="@id/button_talla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/text_uy"
        app:layout_constraintTop_toBottomOf="@+id/text_tr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/alkatip_basma"
        android:textSize="22sp"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/button_qaytish"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_home_24"
        android:layout_marginBottom="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>